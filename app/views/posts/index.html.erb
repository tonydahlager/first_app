<h2 class="header">Tony's Index of Blog Posts</h2>

<table>

	<% @posts.each do |post| %>
		<p>
			<strong><%= post.title %></strong><br/>
			<%= post.text %>
		</p>
		<p>
			<%= link_to 'Show', post %>
			 | 
			<%= link_to 'Edit', edit_post_path(post) %>
			 | 
			<%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
		<!-- TD Follow-up
		I want to learn more about the HTML5 behind the method and 'data-confirm' attributes here. Read more about application.html.erb and jquery_ujs -->
	<% end %>
</table>

<p>
	<%= link_to 'New Post', new_post_path, class: "btn btn-small" %>
</p>